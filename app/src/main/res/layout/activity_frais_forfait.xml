<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FraisForfait">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="335dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    app:srcCompat="@drawable/petit" />

                <TextView
                    android:id="@+id/fraisauforfait"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="frais au  forfait"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Libelle" />

                <Spinner
                    android:id="@+id/listeForfait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/typeforfait" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titreQte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QuantitÃ©"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:id="@+id/txtQte"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateforfait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:text="Date"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="Entrez Date"
                    android:onClick="ShowCal" />

                <ImageButton
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ShowCal"
                    app:srcCompat="@drawable/calendrier" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnAjouter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="saveData"
                    android:text="ajouter" />

                <Button
                    android:id="@+id/btnRetour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="saveData"
                    android:text="RETOUR"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="589dp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listeFF"
            android:layout_width="match_parent"
            android:layout_height="255dp">

        </ListView>

        <Button
            android:id="@+id/btnSuprimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="suprimer" />

        <Button
            android:id="@+id/btnModifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="modifier" />
    </LinearLayout>


</LinearLayout>