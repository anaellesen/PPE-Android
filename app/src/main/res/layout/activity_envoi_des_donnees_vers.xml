<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="EnvoiDesDonneesVers">


    <ImageView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/petit" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="envoie des données vers " />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="retour" />
    </LinearLayout>

    <Button
        android:id="@+id/btnenvoiedonneéé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="envoyer les donées "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp" />

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clique_retour"
        android:text="RETOUR"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="589dp" />
</LinearLayout>