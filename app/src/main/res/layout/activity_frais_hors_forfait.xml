<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FraisHorsForfait">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="406dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/petit" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="frais hors forfait"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/libelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Libelle" />

                <EditText
                    android:id="@+id/txtLibelle"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/montant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Montant" />

                <EditText
                    android:id="@+id/txtMontant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/datefrais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DateFrais" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:ems="10"
                    android:inputType="date"
                    android:onClick="ShowCal" />

                <ImageButton
                    android:id="@+id/datePicker2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ShowCal"
                    app:srcCompat="@drawable/calendrier" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAjouterFHF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="ajouter" />

                <Button
                    android:id="@+id/btnModifierFHF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="modifier" />

                <Button
                    android:id="@+id/btnSuprimerFHF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="supprimer" />

                <Button
                    android:id="@+id/btnRetour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="RETOUR"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="589dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>


